<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="checkbox.cursoandroid.com.checkbox.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Quais animais de estimação você tem ?" />

    <CheckBox
        android:id="@+id/caoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="23dp"
        android:text="Cão" />

    <CheckBox
        android:id="@+id/gatoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/caoId"
        android:layout_alignStart="@+id/caoId"
        android:layout_below="@+id/caoId"
        android:text="Gato" />

    <CheckBox
        android:id="@+id/papagaioId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gatoId"
        android:layout_alignStart="@+id/gatoId"
        android:layout_below="@+id/gatoId"
        android:text="Papagaio" />

    <Button
        android:id="@+id/botaoMostrarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/papagaioId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:text="Mostrar" />

    <TextView
        android:id="@+id/textoExibicaoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoMostrarId"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:text="Mostrar..." />
</RelativeLayout>
